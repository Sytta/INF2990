{
  "name": "scrabble-service",
  "version": "1.0.0",
  "description": "Le projet Scrabble pour le cours LOG2990 de la session H2017",
  "scripts": {
    "start": "tsc && concurrently --kill-others \"tsc -w \" \"nodemon out/www.js\" ",
    "lint": "tslint app/**/*.ts app/*.ts --force -t verbose",
    "test": "tsc && concurrently \"tsc -w\" \"karma start karma.conf.js\"",
    "test-once": "tsc && karma start karma.conf.js --single-run || npm run-script coverage",
    "coverage": "remap-istanbul -i coverage/coverage-final.json -o coverage -t html",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "clean": "rimraf out node_modules",
    "postinstall": "rimraf false",
    "update:packages": "node wipe-dependencies.js && rm -rf node_modules && npm update --save-dev && npm update --save"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "codelyzer": "^2.0.0-beta.4",
    "concurrently": "^3.1.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "debug": "^2.6.0",
    "express": "^4.14.0",
    "mongoose": "^4.7.8",
    "morgan": "^1.7.0",
    "serve-favicon": "^2.3.2",
    "socket.io": "^1.7.2",
    "systemjs": "^0.19.41"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "^3.4.34",
    "@types/cookie-parser": "^1.3.30",
    "@types/cors": "^2.8.0",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.34",
    "@types/mocha": "^2.2.36",
    "@types/mongoose": "^4.7.3",
    "@types/morgan": "^1.7.32",
    "@types/node": "^6.0.56",
    "@types/serve-favicon": "^2.2.28",
    "@types/socket.io": "^1.4.27",
    "chai": "^3.5.0",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "remap-istanbul": "^0.8.4",
    "rimraf": "^2.5.4",
    "tslint": "^4.2.0",
    "tslint-eslint-rules": "^3.2.3",
    "typescript": "^2.1.4"
  }
}
